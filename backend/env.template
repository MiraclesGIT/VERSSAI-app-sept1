# Enhanced VERSSAI Backend Configuration
# Copy this file to .env and update with your actual values

# === SERVER CONFIGURATION ===
HOST=0.0.0.0
PORT=8080
DEBUG=false
ENVIRONMENT=development
LOG_LEVEL=info

# === DATABASE CONFIGURATION ===
# PostgreSQL for structured data
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=verssai_vc
POSTGRES_USER=verssai_user
POSTGRES_PASSWORD=verssai_secure_password_2024
DATABASE_URL=postgresql://verssai_user:verssai_secure_password_2024@localhost:5432/verssai_vc

# === VECTOR DATABASE CONFIGURATION ===
# ChromaDB for 3-layer RAG
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_PERSIST_DIRECTORY=./chromadb_data

# === REDIS CONFIGURATION ===
# Redis for caching and session management
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# === NEO4J CONFIGURATION ===
# Neo4j for graph database (enhanced RAG)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=verssai_neo4j_2024
NEO4J_DATABASE=neo4j

# === N8N CONFIGURATION ===
# N8N workflow automation
N8N_URL=http://localhost:5678
N8N_BASIC_AUTH_USER=verssai_admin
N8N_BASIC_AUTH_PASSWORD=verssai_n8n_2024
N8N_WEBHOOK_BASE_URL=http://localhost:5678/webhook

# === MCP WEBSOCKET CONFIGURATION ===
MCP_WEBSOCKET_URL=ws://localhost:3000
MCP_WEBSOCKET_RECONNECT_DELAY=5000

# === AI/ML API KEYS ===
# OpenAI for LLM integration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# Anthropic Claude (alternative)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI (alternative)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# === EXTERNAL APIS ===
# Google Custom Search for research
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Twitter API for social signals
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# === SECURITY CONFIGURATION ===
# JWT for authentication
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA=86400

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=50

# === FILE STORAGE ===
# Upload configuration
UPLOAD_FOLDER=./uploads
MAX_UPLOAD_SIZE=100MB
ALLOWED_EXTENSIONS=pdf,docx,xlsx,pptx,txt,md,json,csv

# === MONITORING & OBSERVABILITY ===
# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Sentry error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# === DEVELOPMENT SETTINGS ===
# Auto-reload and debugging
RELOAD_ON_CHANGE=true
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# === MULTI-TENANT SETTINGS ===
# Organization and user management
DEFAULT_ORGANIZATION=sequoia_capital
ENABLE_MULTI_TENANT=true
ENABLE_USER_REGISTRATION=false

# === RAG CONFIGURATION ===
# Embedding models and settings
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
RAG_TOP_K=5
RAG_CONFIDENCE_THRESHOLD=0.7

# === WORKFLOW CONFIGURATION ===
# Default workflow settings
DEFAULT_WORKFLOW_TIMEOUT=1800
MAX_CONCURRENT_WORKFLOWS=10
WORKFLOW_RETRY_ATTEMPTS=3

# === BACKUP AND MAINTENANCE ===
# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# === FEATURE FLAGS ===
# Enable/disable specific features
ENABLE_ADVANCED_RAG=true
ENABLE_GRAPH_DATABASE=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_BACKGROUND_TASKS=true
ENABLE_CACHING=true

# === PERFORMANCE TUNING ===
# Connection pools and timeouts
DB_POOL_SIZE=20
DB_POOL_OVERFLOW=30
HTTP_TIMEOUT=30
WEBSOCKET_TIMEOUT=300

# === LOGGING CONFIGURATION ===
# Detailed logging settings
LOG_FORMAT=json
LOG_FILE=./logs/verssai.log
LOG_ROTATION=daily
LOG_RETENTION=7