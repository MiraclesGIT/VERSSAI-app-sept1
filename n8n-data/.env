# N8N Configuration for VERSSAI VC Intelligence Platform

# Basic Configuration
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=verssai
N8N_BASIC_AUTH_PASSWORD=verssai2024!

# Server Configuration  
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http

# Database Configuration (using existing MongoDB)
DB_TYPE=mongodb
DB_MONGODB_CONNECTION_URL=mongodb://localhost:27017
DB_MONGODB_DATABASE=verssai_n8n

# Workflow Configuration
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true

# Security
N8N_SECURE_COOKIE=false
N8N_COOKIES_SECURE=false

# File Storage
N8N_USER_FOLDER=/app/n8n-data

# Logging
N8N_LOG_LEVEL=debug
N8N_LOG_OUTPUT=console,file
N8N_LOG_FILE_LOCATION=/app/n8n-data/logs/

# External API Access
N8N_SKIP_WEBHOOK_DEREGISTRATION_SHUTDOWN=true
WEBHOOK_URL=https://vc-intelligence-1.preview.emergentagent.com/webhook/

# Custom Extensions
N8N_CUSTOM_EXTENSIONS=/app/n8n/extensions

# Performance
N8N_WORKERS=2
EXECUTIONS_TIMEOUT=3600
EXECUTIONS_TIMEOUT_MAX=7200