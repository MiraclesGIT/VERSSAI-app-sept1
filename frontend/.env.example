# VERSSAI Enhanced Frontend Environment Configuration
# Copy this file to .env.local and update values as needed

# Backend API Configuration
REACT_APP_BACKEND_URL=http://localhost:8080
REACT_APP_API_VERSION=v1

# N8N Integration
REACT_APP_N8N_URL=http://localhost:5678
REACT_APP_N8N_WEBHOOK_BASE=http://localhost:5678/webhook

# MCP WebSocket Configuration
REACT_APP_MCP_WEBSOCKET_URL=ws://localhost:3000
REACT_APP_MCP_ENABLED=true

# ChromaDB Vector Database
REACT_APP_CHROMADB_URL=http://localhost:8000
REACT_APP_RAG_ENABLED=true

# PostgreSQL Database
REACT_APP_POSTGRES_URL=postgresql://verssai_user:verssai_secure_password_2024@localhost:5432/verssai_vc

# Authentication & Security
REACT_APP_AUTH_ENABLED=false
REACT_APP_DEMO_MODE=true

# Feature Flags
REACT_APP_FEATURE_MULTI_TENANT=true
REACT_APP_FEATURE_RAG_LAYERS=true
REACT_APP_FEATURE_N8N_INTEGRATION=true
REACT_APP_FEATURE_MCP_CONSOLE=true
REACT_APP_FEATURE_DOCUMENT_UPLOAD=true
REACT_APP_FEATURE_WORKFLOW_AUTOMATION=true

# UI Configuration
REACT_APP_BRAND_NAME=VERSS.AI
REACT_APP_BRAND_TAGLINE=VC Intelligence Platform
REACT_APP_THEME=purple
REACT_APP_UI_STYLE=linear

# Development Settings
REACT_APP_DEBUG=false
REACT_APP_LOG_LEVEL=info
REACT_APP_MOCK_DATA=true

# Analytics & Monitoring
REACT_APP_ANALYTICS_ENABLED=false
REACT_APP_SENTRY_DSN=
REACT_APP_HOTJAR_ID=

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=50MB
REACT_APP_ALLOWED_FILE_TYPES=pdf,docx,txt,xlsx,pptx
REACT_APP_UPLOAD_ENDPOINT=/api/v1/documents/upload

# Real-time Features
REACT_APP_WEBSOCKET_RECONNECT_ATTEMPTS=5
REACT_APP_WEBSOCKET_RECONNECT_DELAY=5000

# Performance Settings
REACT_APP_CHUNK_SIZE=10MB
REACT_APP_PARALLEL_UPLOADS=3
REACT_APP_CACHE_ENABLED=true
